# These files get sourced AFTER $ZSH/oh-my-zsh.sh
src_files=(
  .opts
  .aliases
  .functions
  .jekyll
  .completion-pm2
  .nvm_load
  .extra
)

function source_files {
  for file in "${@}"; do
    src_file=$HOME/dotfiles/${file}
    if [[ -f $src_file ]]; then
      source $src_file
    else
      echo "$src_file does not exist"
    fi
  done
}

source_files $src_files

