# These files get sourced AFTER $ZSH/oh-my-zsh.sh
src_files=(
  .opts
  .aliases
  .functions
  .jekyll
  .extra
  .zsh-theme
)

# source_files function is in .zprofile
if ! $(type source_files) > /dev/null; then
  echo "Cannot find the source_files function. Will not load ${src_files}"
else
  source_files $src_files
fi


unset src_files

# cdpath all lowercase, so set as array:
cdpath=(
  $HOME
  $HOME/Sites
  "${fpath[@]}"
)

# AUTO LOAD files in dotfiles/fn when first called
fpath=(
  $HOME/dotfiles/fn
  "${fpath[@]}"
)
autoload -Uz ${fpath[1]}/*(:t)

